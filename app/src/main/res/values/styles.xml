<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="TextHeading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextSubheading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="SuccessButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/success</item>
        <item name="cornerRadius">12dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!-- Card Styles -->
    <style name="PrimaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="SecondaryCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/gray_light</item>
        <item name="contentPadding">12dp</item>
    </style>
</resources>
